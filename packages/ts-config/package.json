{
    "name": "@dyb-dev/ts-config",
    "version": "0.1.0",
    "description": "TypeScript 配置",
    "author": "dyb-dev",
    "license": "MIT",
    "type": "module",
    "private": false,
    "main": "./configs/tsconfig.base.json",
    "exports": {
        ".": {
            "require": "./configs/tsconfig.base.json"
        },
        "./vue": {
