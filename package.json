{
    "name": "base-lib",
    "version": "0.11.1",
    "description": "项目中常用的基础库",
    "author": "dyb-dev",
    "license": "MIT",
    "type": "module",
    "private": true,
    "packageManager": "pnpm@8.15.5",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=9.0.0 <10.0.0"
    },
    "scripts": {
        "prepare": "husky",
        "postinstall": "pnpm -r run build",
        "release": "project-cli release",
        "format": "prettier --write . && eslint --fix . && stylelint --fix . --allow-empty-input"
    },
    "devDependencies": {
        "@dyb-dev/eslint-config": "workspace:*",
        "@dyb-dev/prettier-config": "workspace:*",
        "@dyb-dev/project-cli": "workspace:*",
        "@dyb-dev/stylelint-config": "workspace:*",
        "@dyb-dev/ts-config": "workspace:*",
        "eslint": "catalog:",
        "husky": "^9.1.6",
        "lint-staged": "^16.2.7",
        "prettier": "catalog:",
        "prettier-eslint": "^16.3.0",
        "stylelint": "catalog:",
        "typescript": "catalog:"
    },
    "lint-staged": {
        "*": [
            "prettier --write",
            "eslint --fix",
            "stylelint --fix --allow-empty-input"
        ]
    }
}
